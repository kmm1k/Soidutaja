<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ee.soidutaja.soidutaja.TripInfoView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sõidu Info"
        android:layout_gravity="center"
        android:id="@+id/tripInfo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tutvustuse tekst"
        android:layout_gravity="left"
        android:width="400dp"
        android:height="150dp"
        android:id="@+id/description"
        android:layout_below="@+id/tripInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:text="Vabu kohti"
        android:id="@+id/freeSpacesTitle"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/tripInfo"
        android:layout_alignEnd="@+id/tripInfo" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="400dp"
        android:id="@+id/freeSpaces"
        android:max="4"
        android:progress="2"
        android:indeterminate="false"
        android:layout_below="@+id/freeSpacesTitle"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1"
        android:layout_below="@+id/driverName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tõnis Piirits"
        android:id="@+id/driverName"
        android:layout_below="@+id/driverTitle"
        android:layout_alignLeft="@+id/freeSpacesTitle"
        android:layout_alignStart="@+id/freeSpacesTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sõidutaja"
        android:id="@+id/driverTitle"
        android:layout_below="@+id/freeSpaces"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HInd:"
        android:id="@+id/priceTitle"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5 rubla"
        android:id="@+id/priceValue"
        android:layout_below="@+id/priceTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Broneeri"
        android:id="@+id/takeSpaceInCar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</LinearLayout>
