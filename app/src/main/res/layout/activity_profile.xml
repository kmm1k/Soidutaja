<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:id="@+id/headerLinearLay"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/pingu"
        android:src="@drawable/pingu"
        android:layout_height="100dp"
        android:layout_width="100dp"></ImageView>

    <TextView
        android:id="@+id/usernameTextView"
        android:text="Nimi"
        android:layout_toRightOf="@id/pingu"
        android:textSize="24sp"
        android:layout_height="40dp"
        android:layout_width="300dp"></TextView>


    <RatingBar
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_gravity="center_horizontal" />

    <ListView

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/driverList"
        android:layout_marginTop="230dp"
 />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/passengerList"
        android:layout_weight="0.33"
        android:layout_marginTop="400dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nimekiri, kus sa oled olnud sõidutaja"
        android:id="@+id/driverListHeading"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nimekiri, kus sa oled olnud sõitja"
        android:id="@+id/passengerListHeading"
        android:layout_below="@+id/driverList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lisainfo"
        android:id="@+id/description"
        android:layout_below="@+id/usernameTextView"
        android:layout_toRightOf="@+id/pingu"
        android:layout_alignRight="@+id/usernameTextView"
        android:layout_alignEnd="@+id/usernameTextView"
        android:layout_alignBottom="@+id/pingu" />
</RelativeLayout>
